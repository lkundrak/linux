/dts-v1/;
#include "mmp2.dtsi"
#include <dt-bindings/gpio/gpio.h>

/ {
	model = "OLPC XO-1.75";
	compatible = "olpc,xo-1.75", "mrvl,mmp2";

	chosen {
		/* bootargs = "console=ttyS2,115200 earlyprintk root=upadol rdinit=/bin/sh"; */
		/* bootargs = "console=ttyS2,115200 earlyprintk root=/dev/ram0"; */
		bootargs = "console=tty0 console=ttyS2,115200 earlyprintk root=upadol rdinit=/sbin/init dyndbg=\"module sdhci_pxav3 +p; module mmc_core +p; module sdhci +p\" clk_ignore_unused vt.color=0xf0 fbcon=font:OLPC15x30 drm.debug=0xff ignore_loglevel=1";
	};

	memory {
		reg = <0x0 0x20000000>;
		available = <0x1000 0x1efff000>;
	};

#if 0
	dcon_i2c {
		compatible = "i2c-gpio";
		gpios = <&gpio 110 GPIO_ACTIVE_HIGH &gpio 161 GPIO_ACTIVE_HIGH>;
		#address-cells = <1>;
		#size-cells = <0>;
		status = "okay";

		dcon@0d {
			.node = <0x382e0f00>;
			compatible = "olpc,xo1.75-dcon", "olpc,xo1-dcon";
			gpios = <&gpio 100 GPIO_ACTIVE_HIGH
				 &gpio 101 GPIO_ACTIVE_HIGH
				 &gpio 142 GPIO_ACTIVE_HIGH
				 &gpio 124 GPIO_ACTIVE_HIGH>;
			gpio-names = "stat0", "stat1", "load", "irq";
			reg = <0x0d>;
			status = "okay";
		};
	};
#endif

	panel {
		compatible = "innolux,ls075at011", "simple-panel";
		width-mm = <152>;
		height-mm = <115>;

		panel-timing {
			/* 1200x900 @50Hz */
			hactive = <1200>;
			vactive = <900>;
			clock-frequency = <56930000>;
			hback-porch = <24>;
			hfront-porch = <26>;
			vback-porch = <5>;
			vfront-porch = <4>;
			hsync-len = <6>;
			vsync-len = <3>;
		};

		port {
			panel_in: endpoint {
				remote-endpoint = <&lcd_out_con>;
			};
		};
	};

	soc {
		ap-sp@d4290000 {
			#address-cells = <0x1>;
			#size-cells = <0x0>;
			/* clocks = <&soc_clocks MMP2_CLK_WTM>; */
			compatible = "olpc,ap-sp";
			interrupts = <40>;
			reg = <0xd4290000 0xd0>;
			status = "okay";

			keyboard@0 {
				compatible = "pnpPNP,303";
				keyboard-type = "us";
				language = "EN";
				reg = <0>;
			};

			touchpad@1 {
				.node = <0xec760c00>;
				compatible = "pnpPNP,f03";
				reg = <1>;
			};
		};

#if 0
		gpu: gpu@d420d000 {
			clocks = <&soc_clocks MMP2_CLK_GPU>;
			clock-names = "core";
			compatible = "vivante,gc";
			interrupts = <8>;
			/* power-domains = <&gpu_domain>; */
			reg = <0xd420d000 0x4000>;
			/* status = "disabled"; */
		};


		apb@d4000000 {
			spi0: ssp3@d4037000 {
				compatible = "marvell,mmp2-ssp3";
				reg = <0xd4037000 0x1000>;
				interrupts = <20>;
				clocks = <&soc_clocks MMP2_CLK_SSP3>;
				spi-slave;

				slave {
					compatible = "olpc,xo1.75-ec";
					ack-gpio = <&gpio 125 GPIO_ACTIVE_HIGH>;
					cmd-gpio = <&gpio 155 GPIO_ACTIVE_HIGH>;
				};
			};

		};
#endif
	};
};

&uart3 {
	status = "okay";
};

#if 0
&rtc {
	status = "okay";
};
#endif

